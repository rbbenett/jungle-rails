<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header class="user">
  <div class="container">
    <% if current_user %>
      Hi <strong><%= current_user.name %>!</strong> | <%= link_to "Logout", '/logout' %>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>
    </div>
  </header>


  <%= render 'layouts/top_nav' %>

  <main class="container">

    <% if active_sale? %>
      <div class="alert alert-info">
      <% Sale.active.each do |sales| %>
        <p>
        There's an active <%= sales.name %> sale going on!
        <strong>Everything is <%= sales.percent_off %>% off!</strong>
        </p>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
