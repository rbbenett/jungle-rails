<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <%= render 'product_details', product: @product %>

    </div>
    <%= render 'review' %>
    <h3 class="page-header"> Reviews: </h3>
    <br/>
    <% @reviews.each do |review| %>
      <%= render 'rating', rating: review.rating, description: review.description, user: review.user_id, user_first_name: review.user.first_name, user_last_name: review.user.last_name, created_at: review.created_at  %>
    <% end %>

  </article>

</section>
