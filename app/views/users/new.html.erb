<!-- app/views/users/new.html.erb -->

<h1>Signup!</h1>
<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
    <%= label_tag :first_name, 'First Name' %>
    <%= f.text_field :first_name, class: 'form-control', id: 'exampleInputName1', placeholder: 'First Name' %>
  </div> 
  <div class="form-group">
    <%= label_tag :last_name, 'Last Name' %>
    <%= f.text_field :last_name, class: 'form-control', id: 'exampleInputName1', placeholder: 'Last Name' %>
  </div> 
  <div class="form-group">
    <%= label_tag :email, 'Email Address' %>
    <%= f.text_field :email, class: 'form-control', id: 'exampleInputEmail1', placeholder: 'Email' %>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Password' %>
    <%= f.password_field :password, class: 'form-control', id: 'exampleInputPassword1', placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Confirm Password' %>
    <%= f.password_field :password_confirmation, class: 'form-control', id: 'exampleInputPasswordConf1', placeholder: 'Confirm Password' %>
  </div>
  <%= f.submit "Submit" %>
<% end %>